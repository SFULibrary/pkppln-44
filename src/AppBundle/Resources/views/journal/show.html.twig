{% extends 'base.html.twig' %}

{% block title %}Journal{% endblock %}

 {% block pageheader %} 
    <h1>Journal Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('journal_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('journal_edit', { 'id': journal.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('journal_delete', { 'id': journal.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Journal?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Uuid</th>
                <td>{{ journal.uuid }}</td>
            </tr>
            <tr>
                <th>Contacted</th>
                <td>{% if journal.contacted %}{{ journal.contacted|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Ojs Version</th>
                <td>{{ journal.ojsVersion }}</td>
            </tr>
            <tr>
                <th>Notified</th>
                <td>{% if journal.notified %}{{ journal.notified|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ journal.title }}</td>
            </tr>
            <tr>
                <th>Issn</th>
                <td>{{ journal.issn }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ journal.url }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ journal.status }}</td>
            </tr>
            <tr>
                <th>Terms Accepted</th>
                <td>{% if journal.termsAccepted %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ journal.email }}</td>
            </tr>
            <tr>
                <th>Publisher Name</th>
                <td>{{ journal.publisherName }}</td>
            </tr>
            <tr>
                <th>Publisher Url</th>
                <td>{{ journal.publisherUrl }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if journal.created %}{{ journal.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if journal.updated %}{{ journal.updated|date }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
    {% if journal.deposits | length > 0 %}    
    <h2>Deposits</h2>
    <ul>
        {% for deposits in journal.deposits %}
        <li>
            <a href="{{ path("deposits_show", {"id":deposits.id}) }}">
                {{ deposits }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
